{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Warning",
      "components.schedular.ScheduledJob": "Debug"
    }
  },

  "FileLogger": {
    "LogFolder": "/Logs",
    "FileFormat": "log-{Date}.txt",
    "Json": true,
    "LogLevel": {
      "Default": "Critical",
      "components.schedular.ScheduledJob": "Debug"
    }
  },

  "notifications": {
    "criticalChannel": "critical-issues",
    "normalChannel": "automated-tasks"
  },

  "AllowedHosts": "*"
}
